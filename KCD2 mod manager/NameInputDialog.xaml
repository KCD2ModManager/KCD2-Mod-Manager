<Window x:Class="KCD2_mod_manager.NameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KCD2_mod_manager.ViewModels"
        Title="{Binding Title}" Height="220" MinHeight="220" Width="420" MinWidth="420"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource ListBoxForegroundBrush}"
        ResizeMode="NoResize">
    <!-- WICHTIG: Verbesserte Layout-Struktur für bessere Lesbarkeit und keine Überlappungen -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Prompt TextBlock -->
        <TextBlock Text="{Binding Prompt}" 
                   FontSize="14" 
                   Margin="0,0,0,15" 
                   Grid.Row="0"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource ListBoxForegroundBrush}"/>
        <!-- Input TextBox -->
        <TextBox x:Name="ModNameTextBox" 
                 Grid.Row="1" 
                 Height="35"
                 Margin="0,0,0,20"
                 Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource SearchBackgroundBrush}"
                 Foreground="{DynamicResource SearchForegroundBrush}"
                 CaretBrush="{DynamicResource SearchForegroundBrush}"
                 BorderBrush="{DynamicResource SearchBorderBrush}"
                 BorderThickness="1"
                 Padding="5"/>
        <!-- Spacer Row -->
        <Grid Grid.Row="2"/>
        <!-- Button Row -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="{Binding OkButtonText}" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0" 
                    Click="OKButton_Click" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
