<Application x:Class="KCD2_mod_manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KCD2_mod_manager">
    <Application.Resources>
        <ResourceDictionary>
            <!-- WICHTIG: Theme-Dictionaries werden dynamisch geladen basierend auf Dark/Light Mode -->
            <!-- Gemeinsame Styles und Templates -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Theme.Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
