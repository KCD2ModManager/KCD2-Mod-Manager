<Window x:Class="KCD2_mod_manager.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KCD2_mod_manager.ViewModels"
        Title="{Binding Title}" Height="220" MinHeight="220" Width="440" MinWidth="440" Padding="0"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    <!-- WICHTIG: Verbesserte Layout-Struktur mit Grid für bessere Kontrolle und keine Überlappungen -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Message TextBlock -->
        <TextBlock TextWrapping="Wrap" 
                   Text="{Binding Message}" 
                   Grid.Row="0"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"
                   FontSize="14"
                   Foreground="{DynamicResource ListBoxForegroundBrush}"/>
        
        <!-- CheckBox -->
        <CheckBox x:Name="DontAskAgainCheckBox" 
                  Content="{Binding DontAskAgainText}" 
                  Grid.Row="1"
                  HorizontalAlignment="Center" 
                  Margin="0,0,0,20"
                  Foreground="{DynamicResource ListBoxForegroundBrush}"/>
        
        <!-- Spacer -->
        <Grid Grid.Row="2"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="{Binding YesButtonText}" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0" 
                    Click="YesButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="{Binding NoButtonText}" 
                    Width="80" 
                    Height="30" 
                    Click="NoButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
